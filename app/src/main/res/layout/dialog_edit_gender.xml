<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle_profile_bg"
    android:padding="24dp"
    tools:context=".mypage.profile.ProfileEditGenderDialog">

    <TextView
        android:id="@+id/tvEditGenderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stringProfileEditGender"
        android:textAppearance="@style/styleEditGenderTitle"
        android:layout_marginStart="27dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/btnEditGenderClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:src="@drawable/all_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/btnGenderMan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="51dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/auth_man_off"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/tvEditGenderTitle"
        app:layout_constraintBottom_toTopOf="@id/btnEditGenderSave"
        app:layout_constraintEnd_toStartOf="@id/btnGenderWoman"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/manSelectText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="남성"
        android:layout_marginTop="4dp"
        android:textColor="@color/gray_off"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnGenderMan"
        app:layout_constraintStart_toStartOf="@+id/btnGenderMan"
        app:layout_constraintTop_toBottomOf="@+id/btnGenderMan" />

    <ImageView
        android:id="@+id/btnGenderWoman"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="51dp"
        android:src="@drawable/auth_woman_off"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/tvEditGenderTitle"
        app:layout_constraintStart_toEndOf="@id/btnGenderMan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnEditGenderSave"/>

    <TextView
        android:id="@+id/womanSelectText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="여성"
        android:layout_marginTop="4dp"
        android:textColor="@color/gray_off"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnGenderWoman"
        app:layout_constraintStart_toStartOf="@+id/btnGenderWoman"
        app:layout_constraintTop_toBottomOf="@+id/btnGenderWoman" />



    <TextView
        android:id="@+id/btnEditGenderSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/stringProfileChange"
        android:textAppearance="@style/styleProfileChangeBtn"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/womanSelectText"
        android:background="@drawable/all_long_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>